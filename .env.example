# FlagWise - Shadow AI Detection Server
# Development Configuration Template
# Copy this file to .env and customize for your environment

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=shadow_ai
POSTGRES_USER=shadow_user
POSTGRES_PASSWORD=shadow_pass
POSTGRES_PORT=5432

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=llm-traffic-logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Web Configuration
REACT_APP_API_URL=http://localhost:8000

# Security
ENCRYPTION_KEY=your-secret-key-here-must-be-32-characters-minimum-for-aes256
JWT_SECRET_KEY=your-jwt-secret-here

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_MIN_RISK_SCORE=50
ALERT_RATE_LIMIT=5
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-password